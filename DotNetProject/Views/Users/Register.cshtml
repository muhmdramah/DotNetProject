@model DotNetProject.Models.User

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg rounded border-0 login-card" style="max-width: 400px; width: 100%;">
        <div class="card-body p-4">
            <h2 class="card-title text-center mb-4 font-weight-bold">Sign Up</h2>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Register" method="post">
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control form-control-lg" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control form-control-lg" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control form-control-lg" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Register</button>
            </form>

            <div class="mt-4 text-center">
                <a asp-controller="Users" asp-action="Login" class="text-muted">Already have an account? Log in</a>
            </div>
        </div>
    </div>
</div>
